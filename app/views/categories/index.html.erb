<% @categories.each do |category| %>
  <section class="category">
    <h3><%= category.name %></h3>
    <% category.boards.each do |board| %>
      <section class="board">
        <h5><%= link_to board.name, board %></h5>
      </section>
    <% end %>
  </section>
<% end %>

